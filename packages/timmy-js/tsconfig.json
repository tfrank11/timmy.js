{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "strict": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules/**/*", "./dist/**/*"]
}
