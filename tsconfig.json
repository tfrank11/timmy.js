{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "noEmit": true,
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"]
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules/**/*", "./dist/**/*"]
}
